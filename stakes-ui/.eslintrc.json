{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "semistandard",
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "react-app"
  ],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "space-before-function-paren": "off",
    "padded-blocks": "off",
    "react/prop-types": "warn"
  },
  "settings": {
    "react": {
      "version": "16.3"
    }
  },
  "plugins": [
      "react",
      "react-hooks"
  ]
}
